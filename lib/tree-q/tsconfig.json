{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts",
    "tsup.config.ts"
  ]
}
